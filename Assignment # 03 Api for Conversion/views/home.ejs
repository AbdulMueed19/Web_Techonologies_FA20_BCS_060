<%- include('partials/head') %>
<body class="">
<div class="min-h-screen flex-col bg-gradient-to-tl from-yellow-400 to-green-300">
<%- include('partials/navigation') %>
    <form class="flex mx-auto justify-center items-center" id="SignInForm" action="/registration/signin" method="post">
        <div class="flex flex-col p-10 gap-2 justify-center items-center">
            <h1 class="mx-auto text-3xl text-black" style="font-weight:600">Sign in!</h1>
            <input type="text" placeholder="Username"
                   class="border w-72 p-3 rounded-lg outline-2 outline-gray-400 border-slate-400"
                   style="font-family: Arial" name="username" id="username">
            <input type="password" placeholder="Password"
                   class="border w-72 p-3 rounded-lg outline-2 outline-gray-400 border-slate-400"
                   style="font-family: Arial" name="password" id="password">
            <button type="submit" class="border border-slate-400 rounded-lg bg-yellow-400 text-white hover:bg-yellow-600 w-72 mx-auto"
                   style="font-family: 'product sans'">Sign In</button>
        </div>
    </form>

    <!-- Hero Section -->
    <div class="fixed top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
        <form id="conversion" class="bg-white p-6 rounded-lg shadow-2xl border border-slate-400 hidden">
            <button type="button" class="absolute top-2 right-2 text-gray-500 hover:text-gray-700" id="close-button">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="h-5 w-5">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
            <div class="mb-4">
                <label for="usd" class="block text-gray-700 font-bold mb-2">
                    USD
                </label>
                <input type="number" id="usd" name="usd" class="shadow appearance-none border rounded w-72 py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
            </div>
            <div class="mb-4">
                <label for="pkr" class="block text-gray-700 font-bold mb-2">
                    PKR
                </label>
                <input type="number" id="pkr" name="pkr" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
            </div>
            <div class="flex justify-center">
                <button type="submit" class="bg-yellow-500 text-yellow-400 font-bold py-2 px-4 rounded" id="convert-button">
                    Convert
                </button>
            </div>
        </form>
    </div>


    <section class="py-20">
        <div class="container mx-auto px-6 text-center">
            <h1 class="text-5xl font-bold text-white mb-2">Revolutionizing Fintech</h1>
            <p class="text-lg text-white font-semibold mb-12">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam aliquam ullamcorper ex ac pharetra.</p>
            <a href="#" class="bg-white text-yellow-500 font-bold py-3 px-8 rounded-full inline-block hover:bg-yellow-400 hover:text-white transition duration-300" id="get-converted">Convert USD to PKR!</a>
        </div>
    </section>
    <h2 class="text-2xl font-bold text-white px-6">Your Transactions</h2>
    <div class="flex overflow-x-auto px-4 pb-6">
        <% if (transactions.length === 0) { %>
            <div class="text-gray-500">You have no transactions until now.</div>
        <% } else { %>
            <div class="flex space-x-4">
                <% transactions.forEach(function(transaction) { %>
                    <div class="w-64 bg-gray-200 rounded-md p-4">
                        <div class="font-bold">Transaction ID: <%= transaction.transactionId %></div>
                        <div>Created At: <%= transaction.transactionCreatedAt %></div>
                        <div>Created By: <%= transaction.transactionCreatedBy %></div>
                        <div>Amount: <%= transaction.transactionAmount %></div>
                        <div>Description: <%= transaction.transactionDescription %></div>
                        <div>Created To: <%= transaction.transactionCreatedTo %></div>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </div>

    <style>
        .flex::-webkit-scrollbar {
            height: 8px;
        }

        .flex::-webkit-scrollbar-track {
            background-color: transparent;
        }

        .flex::-webkit-scrollbar-thumb {
            background-color: darkgray;
            border-radius: 4px;
        }
    </style>



</div>

<%- include('partials/footer') %>
</body>
</html>
